<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techfirebase.android.mvvmroomviewmodeldagger2reactive">

    // for detection of app start we have used for background data syncing
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    // for knowing network state like internet is available or not
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    // for internet access
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MvvmApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.word.WordActivity"></activity>

        <service
            android:name=".utils.networking.jobscheduling.SchedulerJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

    </application>

</manifest>